<Page
    x:Class="Dogfight_Arena.Pages.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dogfight_Arena.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    
    >

    <Grid Width="800" Height="800">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Canvas Grid.Row="1" Grid.Column="0" Grid.RowSpan="9" Grid.ColumnSpan="11" x:Name="GameCanvas"></Canvas>
        <TextBlock x:Name="healthBarLeftPlayer" Grid.Row="0" Grid.Column="1" FontSize="40" Text="5❤️"></TextBlock>
        <TextBlock x:Name="healthBarRightPlayer" Grid.Row="0" Grid.Column="9" FontSize="40" Text="❤️5"></TextBlock>
        <TextBlock x:Name="sideOfLocalPlayer" Grid.Row="0" Grid.Column="5" FontSize="40" Text=""></TextBlock>

        <ContentDialog
            x:Name="InescapableDialog"
            Title="Game Ended!"
            Content=""
            PrimaryButtonText="Return to the menu"
            SecondaryButtonText="Play again!"
            Grid.Row="2"
            Grid.Column="3"
            Grid.ColumnSpan="5"
            Grid.RowSpan="5"/>
        
        
    </Grid>
</Page>
